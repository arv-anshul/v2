---
import { Icon } from "astro-icon/components";
import Button from "@/components/starwind/button";
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props as Props;

const copyrightYear = new Date().getFullYear();
const linkItems = [
  {
    url: "/website-astro/resume",
    title: "Resume",
    icon: "lucide:scroll-text",
  },
  {
    url: "/website-astro/rss.xml",
    title: "RSS Feed",
    icon: "lucide:rss",
  },
  {
    url: "https://linkedin.com/in/arv-anshul",
    title: "LinkedIn",
    icon: "simple-icons:linkedin",
  },
  {
    url: "https://github.com/arv-anshul",
    title: "GitHub",
    icon: "simple-icons:github",
  },
];
---

<footer class={cn("bg-accent px-4 md:px-0 py-3 text-sm", className)}>
  <div
    class="flex flex-col-reverse gap-2 md:flex-row md:justify-between justify-center items-center w-full md:w-2/3 xl:w-3/5 mx-auto"
  >
    <div class="flex flex-col items-center md:items-start">
      <span>
        Copyright &copy; {copyrightYear}
        <span class="text-muted-foreground font-bold">Anshul Raj Verma</span>
      </span>
      <span>
        Made with
        <span class="animate-pulse text-red-500 text-lg align-middle">
          &hearts;
        </span>
      </span>
    </div>
    <div class="flex">
      {linkItems.map((item) => (
          <Button
            href={item.url}
            size="icon"
            variant="ghost"
            title={item.title}
            class="hover:text-muted-foreground transition-colors"
          >
            <Icon name={item.icon} title={item.title} />
          </Button>
        ))}
    </div>
  </div>
</footer>
